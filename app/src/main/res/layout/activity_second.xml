<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/b_rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROCK"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="338dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/cpu_choice"
        android:layout_toStartOf="@+id/cpu_choice"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/b_scissor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCISSOR"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="338dp"
        android:layout_alignBaseline="@+id/b_rock"
        android:layout_alignBottom="@+id/b_rock"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <Button
        android:id="@+id/b_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAPER"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="338dp"
        android:layout_alignBaseline="@+id/b_scissor"
        android:layout_alignBottom="@+id/b_scissor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




    <ImageView
        android:id="@+id/cpu_choice"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/scissor"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ur_choice"
        android:layout_alignStart="@+id/ur_choice" />

    <ImageView
        android:id="@+id/ur_choice"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/rock"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="your selection"
        android:layout_below="@+id/ur_choice"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cpu selection"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/cpu_choice"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"

        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />


</RelativeLayout>


